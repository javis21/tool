
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Edit user
        </div>
        <div class="card-body">
            {{#each user}}

                <form action="/question/edit3/{{this.id}}" method="POST">
                
                           {{!-- // id,username,fullname,mail,phone, adress --}}

                    <div class="form-group">
                        <label for="apellido">username</label>
                        <input type="text" class="form-control" name="username" id="username" value="{{this.username}}">
                    </div>  
                    <div class="form-group">
                        <label for="apellido">password</label>
                        <input type="text" class="form-control" name="password" id="password" value="{{this.password}}">
                    </div>  
                    <div class="form-group">
                        <label for="apellido">fullname</label>
                        <input type="text" class="form-control" name="fullname" id="fullname" value="{{this.fullname}}">
                    </div>  
                    <div class="form-group">
                        <label for="profesion">mail:</label>
                        <input type="text" class="form-control" name="mail" id="mail" value="{{this.mail}}">
                    </div>
                    <div class="form-group">
                        <label for="apellido">phone</label>
                        <input type="text" class="form-control" name="phone" id="phone" value="{{this.phone}}">
                    </div>  
                    <div class="form-group">
                        <label for="apellido">adress</label>
                        <input type="text" class="form-control" name="adress" id="adress" value="{{this.adress}}">
                    </div>  
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">save</button>
                    </div>        
                </form>
            {{/each}}
        </div>
    </div>
</div>


