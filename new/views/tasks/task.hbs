

      

<div class="mt-5 py-5 px-5">
    <table class="table"  id="main-table">
        <thead style="background-color: blue; color: white;">
            <tr> 
              <th scope="col">id</th>    
            <th scope="col">title</th>
            <th scope="col">date</th>
            <th scope="col">company</th>
                <th scope="col">created_by</th>
            <th scope="col">status</th>
                        <th scope="col">action</th>


                        {{!-- <th scope="col">edit</th> --}}

          
            </tr>
        </thead>
        <tbody  id="myTable">
            {{#each task}}
            <tr>                    
            <th scope="row">{{this.id_ass}}</th>
            <td>{{this.title}}</td>
            <td>{{this.date}}</td>
            <td>{{this.company}}</td>
             <td>{{this.created_by }}</td>
            <td>{{this.status}}</td>

            
            <td>
                                {{!-- <a href="/assessments/edit1" class="btn btn-sm btn-warning">edit</a> --}}
                <a href="/assessments/edit3/{{this.id_ass}}" class="btn btn-sm btn-warning">edit</a>

                {{!-- <a href="/assessments/edit/{{this.id_ass}}" class="btn btn-sm btn-warning">edit</a> --}}
                <a href="/assessments/delete3/{{this.id_ass}}" class="btn btn-sm btn-danger">delete</a>
               

{{#if this.status}}
                <a href="/assessments/finish/{{this.id_ass}}" class="btn btn-sm btn-danger">complete +</a>

{{else}}
                <a href="/assessments/missing/{{this.id_ass}}" class="btn btn-sm btn-danger">complete -</a>

{{/if}}
                <a href="/assessments/view/{{this.id_ass}}" class="btn btn-sm btn-danger">view Team</a>

            </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>


